doctype 5
html
    head
        title= title
        link(rel='stylesheet', href='/css/style.css')
    body
        .whole-page
            header.navbar.navbar-inverse.navbar-fixed-top(role='banner')
                .container
                    div.navbar-header
                        button.navbar-toggle(data-toggle="collapse", data-target="#sb-topnav")
                            span.sr-only Toggle navigation
                            span.icon-bar
                            span.icon-bar
                            span.icon-bar
                        a.navbar-brand(href="/")
                            img.logo(src="/images/logo.jpg", alt="")
                            span.brand-title Solar Badlands

                    div.collapse.navbar-collapse#sb-topnav
                        ul.nav.navbar-nav.navbar-right
                            li
                                a(href="/") Home
                            li
                                a(href="/about") About
                            li
                                a(href="/help") Help
        
            block content
            footer.page-footer
                .container
                    h3 Vote for us?
                    p We're participating in a competition! We sure would appreciate your vote.
                    iframe(src="http://nodeknockout.com/iframe/polar-badlands", frameborder="0", scrolling="no", allowtransparency="true", width="115", height="25")
        script(src='//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js')
        script(src='/javascripts/bootstrap.js')